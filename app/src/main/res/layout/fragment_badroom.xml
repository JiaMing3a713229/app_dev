<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00BCD4">

        <TextView
            android:id="@+id/badroom_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="比賽名稱"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/badroom_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="隊伍名稱"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/badroom_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="作品名稱"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/badroom_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="組員:"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/badroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C8A848"
            android:src="@drawable/rebadroom" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bad_temp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"

                android:text="目前溫度:"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_temp_result"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="100"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="度"
                android:textSize="18sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bad_hum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"

                android:text="目前溫度:"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_humresult2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="68"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/bad_hum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="%"
                android:textSize="18sp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>